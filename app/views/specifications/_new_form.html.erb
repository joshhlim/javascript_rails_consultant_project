<div id="modal-new-specification-fields">
	<div class="modal-header">
	  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	  <h4 class="modal-title">New Specification</h4>
	</div>
	<div class="modal-body">
		<% if signed_in? %>
			<%= form_tag specifications_path, method: :post do %>
			  <%= hidden_field_tag("specification[model_year_id]", @specification.model_year.id) 
			  %>
			  <%= hidden_field_tag("model_year_service_specification[model_year_service_id]", @model_year_service_specification.model_year_service.id) 
			  %>
			  <div class="field">
			  	<%= label_tag "Specification Name:" %>			  	
			  	<%= text_field_tag "specification[name]", 
			  	                   nil,
			  	                   placeholder: "Required: (e.g. 'Valve intake open clearance', 'Oil Viscosity')",
			  	                   class: "form-control"  %>
			  </div>
			  <div class="field row">
			  	<div class="col-md-2 col-xs-2"><%= label_tag 'Value:', nil, class: "control-label" %></div>
			  	<div class="col-md-4 col-xs-4">
					  <%= text_field_tag "specification[single_value_str]", 
					  	                     nil,
					  	                     placeholder: "Opt.",
					  	                     class: "form-control" %>
					</div>
					<div class="col-md-2 col-xs-2">and/or</div>
				</div>					
				<div class="form-group row field">
					<div class="col-md-2 col-xs-2"><%= label_tag "Range:", nil, class: "control-label" %></div>
			  	  <div class="col-md-3 col-xs-4">
					  	<%= text_field_tag "specification[range_start_str]", 
					  	                   nil,
					  	                   placeholder: "Start",
					  	                   class: "form-control"  %>
				  	</div>
				  	<div class="col-md-1 col-xs-1 text-center">-</div>
				  	<div class="col-md-3 col-xs-4">
					  	<%= text_field_tag "specification[range_end_str]", 
					  	                   nil,
					  	                   placeholder: "End",
					  	                   class: "form-control"  %>
				    </div>
			  </div>
			  <div class="actions">
			    <%= button_tag "Create Spec", class: "btn btn-large btn-primary" %>
			  </div>
			<% end %>
		<% end %>
	</div>
  <div class="modal-footer">
  	
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
  </div>
</div>
