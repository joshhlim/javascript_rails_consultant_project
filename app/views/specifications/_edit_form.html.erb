<div id="modal-edit-specification-fields">
	<div class="modal-header">
	  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	  <h4 class="modal-title">Edit "<%= @specification.specification_category.name %>"</h4>
	</div>
	<div class="modal-body">
		<% if signed_in? %>
			<%= form_tag specification_path, method: :patch do %>
			
			  <%= hidden_field_tag("id", @specification.id) %>
			  
			  <div class="field row">
			  	<div class="col-md-2 col-xs-2"><%= label_tag 'Value:', nil, class: "control-label" %></div>
			  	<div class="col-md-4 col-xs-4">
			  		<% value = (@specification.single_value_str.present? ? 
			  	                          @specification.single_value_str
				  	                     		: nil) %>
					  <%= text_field_tag "specification[single_value_str]", 
					  	                     value,
					  	                     placeholder: "Opt.",
					  	                     class: "form-control" %>
					</div>
					<div class="col-md-2 col-xs-2">and/or</div>
				</div>					
				<div class="form-group row field">
					<div class="col-md-2 col-xs-2"><%= label_tag "Range:", nil, class: "control-label" %></div>
			  	  <div class="col-md-3 col-xs-4">
			  	  	<% value = (@specification.range_start_str.present? ? 
			  	                          @specification.range_start_str
				  	                     		: nil) %>
					  	<%= text_field_tag "specification[range_start_str]", 
					  	                   value,
					  	                   placeholder: "Start",
					  	                   class: "form-control"  %>
				  	</div>
				  	<div class="col-md-1 col-xs-1 text-center">-</div>
				  	<div class="col-md-3 col-xs-4">
				  		<% value = (@specification.range_end_str.present? ? 
			  	                          @specification.range_end_str
				  	                     		: value) %>
					  	<%= text_field_tag "specification[range_end_str]", 
					  	                   value,
					  	                   placeholder: "End",
					  	                   class: "form-control"  %>
				    </div>
			  </div>
			  <div class="actions">
			    <%= button_tag "Edit Spec", class: "btn btn-large btn-primary" %>
			  </div>
			<% end %>
		<% end %>
	</div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
  </div>
</div>
