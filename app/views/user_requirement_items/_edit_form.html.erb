<%= simple_form_for(@user_requirement_item, html: { class: 'form-horizontal' }) do |f| %>

  <%= f.input :name, label: "Nickname", required: false, input_html: { class: 'form-control' }, placeholder: "Nickname (optional)" %>
  <%= f.input :brand, label: "Brand", required: false, input_html: { class: 'form-control' }, placeholder: "Brand name (optional)" %>
  <%= f.input :description, label: "Description", required: false, input_html: { class: 'form-control' }, placeholder: "Description (optional)" %>
  <%= button_tag "Update", class: "btn btn-primary" %>
  
<% end %>
