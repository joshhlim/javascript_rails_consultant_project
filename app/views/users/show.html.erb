<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.user_vehicles.any? %>
      <h3>Vehicles</h3>
      <div class="list-group">
        <%= render @user_vehicles %>
      </div>
      <%= will_paginate @user_vehicles %>
    <% end %>
  </div>
</div>