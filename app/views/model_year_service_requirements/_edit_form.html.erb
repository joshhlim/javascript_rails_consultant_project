<div id="modal-edit-fields">
	<div class="modal-header">
	  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	  <h4 class="modal-title">Edit "<%= @model_year_service_requirement.requirement_item.full_display %>"</h4>
	</div>
	<div class="modal-body">
		<% if signed_in? %>
			<%= form_tag model_year_service_requirement_path, method: :patch do %>
			
			  <%= hidden_field_tag("id", @model_year_service_requirement.id) %>
			  
			  <div class="field">
			  	<%= label_tag "Detail:" %>
			  	<% value = (@model_year_service_requirement.requirement_item.detail.present? ? 
			  	                          @model_year_service_requirement.requirement_item.detail
				  	                     		: nil) %>
			  	<%= text_field_tag "model_year_service_requirement[detail]", 
			  	                   value, 
			  	                   placeholder: "(e.g. '21mm', '10W-40', '3/4\")", 
			  	                   class: "form-control"  %>
			  </div>
			  <div class="form-group row field">
			  	<%= label_tag 'Quantity:', nil, class: "col-md-2 control-label" %>
			  	<div class="col-md-4">
			  		<% value = (@model_year_service_requirement.quantity.present? && @model_year_service_requirement.quantity > 0 ? 
				  	                     		@model_year_service_requirement.quantity
				  	                     		: nil) %>
				  	<%= number_field_tag "model_year_service_requirement[quantity]", 
				  	                     value, 
				  	                     class: "form-control" %>
				  </div>
			  	<%= label_tag "Quantity Unit:", nil, class: "col-md-2 control-label" %>
			  	<div class="col-md-4">
				  	<%= text_field_tag "model_year_service_requirement[quantity_unit]", 
				  	                   (@model_year_service_requirement.quantity_unit unless @model_year_service_requirement.quantity_unit.blank?), 
				  	                   class: "form-control"  %>
				  </div>
			  </div>
			  <div class="actions">
			    <%= button_tag "Submit Edit", class: "btn btn-large btn-primary" %>
			  </div>
			<% end %>
		<% end %>
	</div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
  </div>
</div>
