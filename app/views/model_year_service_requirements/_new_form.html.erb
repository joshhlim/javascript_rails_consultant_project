<div id="modal-new-fields">
	<div class="modal-header">
	  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	  <h4 class="modal-title">New <%= @model_year_service_requirement.requirement_category.name %></h4>
	</div>
	<div class="modal-body">
		<% if signed_in? %>
			<%= form_tag model_year_service_requirements_path, method: :post do %>
			  <%= hidden_field_tag("model_year_service_requirement[requirement_category_id]", @model_year_service_requirement.requirement_category.id) %>
			  <%= hidden_field_tag("model_year_service_requirement[model_year_service_id]", @model_year_service_requirement.model_year_service.id) %>
			  <div class="field">
			  	<%= label_tag "#{@model_year_service_requirement.requirement_category.name}:" %>			  	
			  	<%= text_field_tag "model_year_service_requirement[name]", 
			  	                   nil,
			  	                   placeholder: "Required",
			  	                   class: "form-control"  %>
			  </div>
			  <div class="field">
			  	<%= label_tag "Detail:" %>
			  	<%= text_field_tag "model_year_service_requirement[detail]", 
			  	                   nil, 
			  	                   placeholder: "Optional: (e.g. '21mm', '10W-40', '3/4\")", 
			  	                   class: "form-control"  %>
			  </div>
			  <div class="form-group row field">
			  	<%= label_tag 'Quantity:', nil, class: "col-md-2 control-label" %>
			  	<div class="col-md-4">
				  	<%= number_field_tag "model_year_service_requirement[quantity]", 
				  	                     nil,
				  	                     placeholder: "Optional",
				  	                     class: "form-control" %>
				  </div>
			  	<%= label_tag "Quantity Unit:", nil, class: "col-md-2 control-label" %>
			  	<div class="col-md-4">
				  	<%= text_field_tag "model_year_service_requirement[quantity_unit]", 
				  	                   nil,
				  	                   placeholder: "Optional",
				  	                   class: "form-control"  %>
				  </div>
			  </div>
			  <div class="actions">
			    <%= button_tag "Add #{@model_year_service_requirement.requirement_category.name}", class: "btn btn-large btn-primary" %>
			  </div>
			<% end %>
		<% end %>
	</div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
  </div>
</div>
