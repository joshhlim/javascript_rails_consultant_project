<% if signed_in? %>
  <% data_target = "#new-model-year-service-requirement-modal-window"%>
  <% data_remote = "true" %>
  <% href = new_model_year_service_requirement_path(category: service_requirement_name, model_year_service_id: @model_year_service.id) %>
<% else %>
  <% data_target = "#sign-in-modal"%>
  <% data_remote = "false" %>
  <% href = nil %>
<% end %>
<a href="<%= href %>" 
	 class="btn btn-default" 
	 role="button" 
	 data-toggle="modal"
	 data-remote="<%= data_remote %>" 
	 data-target="<%= data_target %>" >
	<i class="fa fa-lg fa-plus fa-fw"></i> Add <%= service_requirement_name %> 
</a>